source 'https://github.com/CocoaPods/Specs.git'
use_frameworks!
workspace 'Aloha'


def allPods
    
    pod 'pop', :git => 'https://github.com/facebook/pop.git'
    pod 'SwiftyJSON', '3.0.0'
    pod 'ReachabilitySwift'
    pod 'Alamofire'
    
    pod 'Firebase/Core'
    pod 'Firebase/Auth'
    pod 'Firebase/Database'
    pod 'Firebase/Storage'
    pod 'Firebase/RemoteConfig'
    pod 'RKDropdownAlert'
    pod 'FCAlertView'
    pod 'Fabric'
    pod 'Crashlytics'
    pod 'TwitterKit'
    pod 'OAuthSwift', '~> 1.1.0'
    pod 'PTPopupWebView'
    pod 'SkyFloatingLabelTextField', '~> 2.0.0'
    pod 'FontAwesome.swift'
    pod 'RevealingSplashView'
    pod 'RSKImageCropper'
    pod 'JPLoadingButton'
    pod 'IQKeyboardManagerSwift'
    pod 'MGCollapsingHeader'
    pod 'LTMorphingLabel'
    pod 'Pageboy'
    pod 'AES256CBC'
    pod 'EasyTipView'
end

target 'Aloha' do
    allPods
end

target 'Aloha dev' do
    allPods
end

target 'AlohaTests' do
    pod 'Firebase'
end









